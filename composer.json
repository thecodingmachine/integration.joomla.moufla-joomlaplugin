{
	"name" : "mouf/integration.joomla.moufla-joomlaplugin",
	"description" : "This is the custom router to plug Mouf with Joomla",
	"keywords" : [
		"joomla",
		"plugin",
		"route",
		"mouf"
	],
	"homepage" : "https://mouf-php.com/packages/mouf/integration.joomla.moufla-joomlaplugin",
	"type" : "joomla-installer",
	"license" : "MIT",
	"authors" : [{
			"name" : "Guillaume Van Der Putte",
			"email" : "g.vanderputte@thecodingmachine.com",
			"homepage" : "http://mouf-php.com"
		}
	],
	"require" : {
		"php" : ">=5.3.0",
		"mouf/mouf" : "~2.0",
		"joomlatools/installer": "*"
	},
	"extra": {
        "installer-name": "moufla",
        "installer-paths": {
        	"plugins/system/{$name}/": ["type:joomla-plugin"]
        }
    }
}